{
  "compilerOptions": {
    "target": "es2016",
    "baseUrl": "./",
    "jsx": "react",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "paths": {
      "__tests__/*": ["__tests__/*"],
      "@services/*": ["./@services/*"]
    }
  }
}
